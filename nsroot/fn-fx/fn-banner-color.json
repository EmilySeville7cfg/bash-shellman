{
  "prefix": "fn banner color",
  "body": [
    "# Usage: bannerColor \"my title\" \"red\" \"*\"",
    "function bannerColor() {",
    "\tcase \\${2\\} in",
    "\t\tblack) color=0",
    "\t\t;;",
    "\t\tred) color=1",
    "\t\t;;",
    "\t\tgreen) color=2",
    "\t\t;;",
    "\t\tyellow) color=3",
    "\t\t;;",
    "\t\tblue) color=4",
    "\t\t;;",
    "\t\tmagenta) color=5",
    "\t\t;;",
    "\t\tcyan) color=6",
    "\t\t;;",
    "\t\twhite) color=7",
    "\t\t;;",
    "\t\t*) echo \"color is not set\"; exit 1",
    "\t\t;;",
    "\tesac\n",
    "\tlocal msg=\"\\${3\\} \\${1\\} \\${3\\}\"",
    "\tlocal edge",
    "\tedge=\\${msg\/\/?\/\\$3\\}",
    "\ttput setaf \\${color\\}",
    "\ttput bold",
    "\techo \"\\${edge}\"",
    "\techo \"\\${msg\\}\"",
    "\techo \"\\${edge}\"",
    "\ttput sgr 0",
    "\techo",
    "}\n"
  ],
  "description": "print a color banner."
}